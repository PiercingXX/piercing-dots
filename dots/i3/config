# Set mod key
set $mod Mod4

###---Styling---###
font xft:Source Code Pro Medium 10

# Use Colemak layout in i3 (applies on reload/restart)
exec_always --no-startup-id setxkbmap -layout us -variant colemak
###---Cursor speed---###
exec --no-startup-id xinput set-prop 11 295 1.9
# Enable natural (inverted) scrolling on the first touchpad found
exec_always --no-startup-id sh -c 'dev="$(xinput list --name-only | grep -i touchpad | head -n1)"; [ -n "$dev" ] && xinput set-prop "$dev" "libinput Natural Scrolling Enabled" 1 || true'


client.focused #0d0d0d #171717 #ffffff #0d0d0d #0d0d0d
client.unfocused #0d0d0d #363636 #888888 #292d2e #0d0d0d

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
bindsym $mod+Space exec dmenu_run
# bindcode $mod4 exec dmenu_run

bindsym $mod+w exec kitty # Open kitty
bindsym Mod1+Tab exec nwg-drawer -c 7 -is 70 -spacing 13
bindsym $mod+Shift+z exec nautilus --new-window # Open nautilus
bindsym $mod+z exec kitty yazi # Open yazi
bindsym $mod+Shift+s exec pavucontrol # Launch pavucontrol (volume mixer)
bindsym $mod+s exec XDG_CURRENT_DESKTOP="gnome" gnome-control-center # Launch GNOME Settings
bindsym $mod+Control+r exec pkill waybar && waybar & # Reload waybar (avoid $mod+r resize mode)
bindsym Print exec hyprshot -m region # Screenshot a region
bindsym Shift+Print exec hyprshot -m window # Screenshot a window
bindsym $mod+x layout toggle split # Toggle split mode

# Applications
bindsym $mod+c exec waterfox || flatpak run net.waterfox.waterfox # Internet Browser
bindsym $mod+d exec discord || flatpak run com.discordapp.Discord # Discord
bindsym $mod+Shift+v exec code # Visual Studio Code
bindsym $mod+v exec kitty nvim
bindsym $mod+b exec obsidian || flatpak run md.obsidian.Obsidian # Obsidian
bindsym $mod+Shift+g exec gimp || flatpak run org.gimp.GIMP # Avoid $mod+g openterminalin
bindsym Control+Mod1+Delete exec kitty flatpak run io.missioncenter.MissionCenter

# Clipboard History
bindsym $mod+n exec pkill fuzzel || cliphist list | fuzzel  --match-mode fzf --dmenu | cliphist decode | wl-copy # Clipboard history >> clipboard


# Local AI
bindsym $mod+a exec kitty ollama run skippy
bindsym $mod+Shift+a exec kitty ollama run gpt-oss:20b
bindsym $mod+Shift+Mod1+a exec kitty ollama run gemma3:27b-it-qat # Avoid conflict with $mod+Mod1+a (alsamixer)
# Replace for lower powered hardware
# bindsym $mod+Shift+a exec kitty ollama run gemma3:1b-it-qat

# Reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

###---Go To Location Open Terminal---###
bindsym $mod+g exec openterminalin

###---Screenshot---###
bindsym $mod+Print exec scrnshot full
bindsym $mod+shift+Print exec scrnshot select
bindsym $mod+control+Print exec scrnshot fulltime
bindsym $mod+control+shift+Print exec scrnshot selecttime

###---Toggle touchpad---###
bindsym F7 exec toggleTouch

#Session
bindsym $mod+grave exec hyprlock # Lock screen
bindsym $mod+Shift+grave exec sleep 0.1 && systemctl suspend || loginctl suspend # Suspend system
# bindsym Control+Shift+Mod1+Delete exit # Logout - Hope you saved your work!
bindsym Control+Shift+Mod1+$mod+Delete exec systemctl poweroff || loginctl poweroff # Power off
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"


