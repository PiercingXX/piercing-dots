# App launcher
bindsym $mod exec true # Open app launcher
bindsym $mod+Return exec ulauncher # Open ulauncher
# bindsym $mod+Shift+f exec pkill fuzzel || fuzzel # Open fuzzel

# Window management
bindsym $mod+q kill # Kill active window
bindsym $mod+w exec kitty # Open kitty
bindsym $mod+Shift+z exec nautilus --new-window # Open nautilus
bindsym $mod+z exec kitty yazi # Open yazi
bindsym $mod+Shift+s exec pavucontrol # Launch pavucontrol (volume mixer)
bindsym $mod+s exec XDG_CURRENT_DESKTOP="gnome" gnome-control-center # Launch GNOME Settings
bindsym $mod+Shift+f fullscreen # Toggle fullscreen mode
bindsym $mod+f floating toggle # Toggle floating mode
bindsym $mod+r exec pkill waybar && waybar &


# Sway does not support layoutmsg togglesplit directly; use layout toggle split
bindsym $mod+x layout toggle split # Toggle split mode

# Applications
bindsym $mod+c exec waterfox || flatpak run net.waterfox.waterfox # Internet Browser
bindsym $mod+Shift+v exec code # Visual Studio Code
bindsym $mod+v exec kitty nvim
bindsym $mod+b exec obsidian || flatpak run md.obsidian.Obsidian # Obsidian
bindsym $mod+g exec gimp || flatpak run org.gimp.GIMP
bindsym Ctrl+Mod1+Delete exec kitty flatpak run io.missioncenter.MissionCenter

# Clipboard History
bindsym $mod+n exec pkill fuzzel || cliphist list | fuzzel --match-mode fzf --dmenu | cliphist decode | wl-copy # Clipboard history >> clipboard

# Show Keybinds
#bindsym $mod+slash exec kitty w3m ~/.config/hypr/keyhint.html

# Local AI
bindsym $mod+a exec kitty ollama run skippy
bindsym $mod+Shift+a exec kitty ollama run gpt-oss:20b
bindsym $mod+Mod1+a exec kitty ollama run gemma3:27b-it-qat
