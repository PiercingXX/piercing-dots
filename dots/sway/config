#------------------------#
# Mod Key                #
#------------------------#
set $mod Mod4

#------------------------#
# Workspace Switching    #
#------------------------#
bindsym $mod+slash workspace back_and_forth  # Switch between current and last workspace
bindsym $mod+period workspace next           # Next workspace
bindsym $mod+comma workspace prev            # Previous workspace

