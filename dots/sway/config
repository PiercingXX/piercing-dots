# bindsym $mod+Shift+a exec kitty ollama run gemma3:1b-it-qat

# Session
bindsym $mod+grave exec ~/.config/sway/scripts/lockman.sh
#bindsym $mod+grave exec hyprlock # Lock screen
bindsym $mod+Shift+grave exec sleep 0.1 && systemctl suspend || loginctl suspend # Suspend system
# bindsym Ctrl+Shift+Mod1+Delete exit # Logout - Hope you saved your work!
bindsym Ctrl+Shift+Mod1+$mod+Delete exec systemctl poweroff || loginctl poweroff # Power off




